
<h3> 新規企業 </h3> 
<%= form_for @tweet do |f| %>
    <div class = "field" >
    <%= f.label :企業名 %>
    <%= f.text_field :kigyoumei, :size => 30 %>
    </div>

    <div class='form-group'>
        <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
            <div class='form-check'>
                <%= tag.label class: 'form-check-label' do %>
                    <%= tag.check_box class: 'form-check-input' %>
                    <%= tag.text %>
                <% end %>
            </div>
        <% end %>
    </div>


    <div class = "field" >
    <%= f.label :締切日 %>
    <%= f.datetime_field :start_time, { discard: true} %>
    </div>



    <div class = "field" >
    <%= f.label :マイページURL %>
    <%= f.text_area :mypage_url, :size => 30 %>
    </div>

    <div class="field">
       <%= f.label :image %>
       <%= f.file_field :image %>
    </div>

    <%= f.submit "投稿する" %>
<% end %>



<%= link_to "一覧に戻る", tweets_path %>



   